generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Event {
  name      String   @id
  latitude  Float
  longitude Float
  drivers   Driver[]
  riders    Rider[]
}

model Driver {
  id        String  @id
  name      String  @default("")
  latitude  Float
  longitude Float
  eventName String?
  capacity  Int
  Event     Event?  @relation(fields: [eventName], references: [name])
}

model Rider {
  id        String  @id
  name      String  @default("")
  latitude  Float
  longitude Float
  eventName String?
  Event     Event?  @relation(fields: [eventName], references: [name])
}
